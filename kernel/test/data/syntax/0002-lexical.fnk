;;; with `;' are comments. This file intentionally contain spaces and
;;; tabs.

(module Main)

(= main
  (do
    ;; 2.5 Numeric Literals

    ;; Literal integers.
    (print 42)
    (print -24)
    (print 0x123abcdef)
    (print -0xdeadbeaf)
    (print 0o7654321)
    (print -0o7777)

    ;; Fractional number.
    (print 1.234567)
    (print -8.9)

    ;; 2.6 Character and String Literals.
    (print #'a) (print #'0) (print #'+) (print #'')
    (print #')) (print #'[) (print #';) (print #'\)
    (print #'çŠ¬) (print #'Ð¯) (print #'Î») (print #'ðŸ‘º)

