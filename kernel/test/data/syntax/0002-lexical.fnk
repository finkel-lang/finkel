    (print #'\x72ac) (print #'\x42f) (print #'\x3bb) (print #'\x1f47a)

    (putChar #'\a)               ; alert
    (putChar #'\SP)              ; space
    (putChar #'\b)               ; backspace
    (putChar #'\HT)              ; horizontal tab
    (putChar #'\n)               ; new line
    (putChar #'\NUL)             ; \NUL
