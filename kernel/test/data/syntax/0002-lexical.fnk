\a numeric escape character, and \^X, a control character.")

    ;; Empty string.
    (putStrLn "")

    ;; Unit.
    (print ())

    ;; List literals.
    (print [1 2 3 4 5])
    (print (: True (: False [])))

    ;; List containing expressions.
    (print [(if (> 2 3)
                (do (<- x (return 100))
                    (<- y (return 23))
                    (return (+ x y)))
                (return 123))
            (Left "foo")])

    ;; Value names not starting with but containing `quote'.
    (let ((:: (x x' x'') Int)
          (= x 100)
          (= x' 200)
          (= x'' 300)))
    (print x)
    (print x')
    (print x'')

    ;; Some tabs



    ;; Function names starting with `#'.
    (let ((:: (# #. ##) (-> Int Int))
          (= # a (+ a 1))
          (= #. a (+ a 2))
